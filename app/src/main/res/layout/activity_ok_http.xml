<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_vertical|center_horizontal"
    tools:context=".network.okhttp.OkHttpActivity">

    <TextView
        android:id="@+id/tv_https"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ok https"
        android:textAllCaps="false"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get_sync"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/button_sync" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get_async"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/button_async" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/button_post" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post_from_body"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/button_from_body" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post_request_body"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/button_request_body" />

</LinearLayout>